<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.text.Font?>
<VBox fx:id="directVBox" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DirectController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background: #F5F5F5; -fx-background-color: #F5F5F5;" VBox.vgrow="ALWAYS">
        <content>
            <TextArea fx:id="txtAreaDisplay" editable="false" style="-fx-control-inner-background: #FFFFFF; -fx-text-fill: #2E2E2E; -fx-font-family: 'Arial'; -fx-font-size: 14;" wrapText="true" />
        </content>
    </ScrollPane>
    <HBox fx:id="inputHBox" alignment="CENTER_RIGHT" spacing="10">
        <TextField fx:id="txtInput" promptText="New message" style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-padding: 5;" HBox.hgrow="ALWAYS">
            <tooltip>
                <Tooltip text="Write your message." />
            </tooltip>
        </TextField>
        <Button fx:id="btnSend" mnemonicParsing="false" onAction="#handleSendMessage" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-padding: 5 15;" text="Send">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Button>
    </HBox>
</VBox>